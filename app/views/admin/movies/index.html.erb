<h1>All movies</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>映画タイトル</th>
      <th>公開年</th>
      <th>上映中か</th>
      <th>概要</th>
      <th>画像URL</th>
      <th>作成日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @movies.each do |movie| %>
        <td><%= link_to movie.id, edit_admin_movie_path(movie.id) %></td>
        <td><%= movie.name %></td>
        <td><%= movie.year %></td>
        <td><%= movie.is_showing ? '上映中' : '上映予定' %></td>
        <td><%= movie.description %></td>
        <td><%= image_tag movie.image_url %></td>
        <td><%= movie.created_at %></td>
        <td><%= movie.updated_at %></td>
      <% end %>
    </tr>
  </tbody>
</ul>