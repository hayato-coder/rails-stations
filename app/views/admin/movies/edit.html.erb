<%= form_with model: @movie, url: admin_movie_path(:id) do |f| %>
  <%= f.label :タイトル %>
  <%= f.text_field :name %>

  <%= f.label :公開年 %>
  <%= f.text_field :year %>

  <%= f.label :概要 %>
  <%= f.text_area :description %>

  <%= f.label :画像URL %>
  <%= f.text_field :image_url %>

  <%= f.label :上映中か %>
  <%= f.check_box :is_showing %>

  <%= f.submit "Create my account", class: "btn btn-primary" %>
<% end %>